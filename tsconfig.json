{
  "compilerOptions": {
     "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES2020",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
     "paths": {
      "@/*": ["./*"],
      "@controllers/*": ["backend/controllers/*"],
      "@services/*": ["backend/services/*"],
      "@lib/*": ["backend/lib/*"]
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "backend"],
  "exclude": ["node_modules"],
  "types": ["node"]
}
